---
import Layout from "../layout/Layout.astro";
import HeroButton from "../components/ui/HeroButton.astro";
import CardBox from "../components/ui/CardBox.astro";
import CardButton from "../components/ui/CardButton.astro";
import Sponsors from "../components/ui/Sponsors.astro";

---

<Layout SiteTitle="Flight Level">

    <div class="relative w-full h-[300px] md:h-[500px] overflow-hidden">
        <video
            class="w-full h-[300px] md:h-[500px]"
            src="/video/banner.mp4"
            autoplay
            muted
            loop
            playsinline
            style="object-fit: cover"
        />
        <div class="absolute inset-0 bg-primary opacity-40"></div>
        <div class="absolute inset-0 flex items-center justify-center p-4">
            <div class="max-w-[900px] w-full flex flex-col items-center text-center font-bold p-0 md:p-8">
                <h1 class="text-white text-3xl md:text-4xl lg:text-6xl drop-shadow-xl">
                    Thanks for joining us in 2025!
                </h1>
                <p class="text-secondary text-[16px] md:text-[29.5px] p-2 text-center w-full md:w-3/5 lg:w-full drop-shadow-xl font-medium">
                    Our yearly event for flight simulator enthusiasts in Norway
                </p>
                <!--<div class="w-full md:w-[800px] mt-8 flex flex-wrap gap-2 md:gap-4 justify-center">
                    <HeroButton href="/norway-live-2025/lan" text="Get the LAN Party details" color="text-primary bg-secondary" />
                    <HeroButton href="/norway-live-2025/presentations" text="Explore Saturdayâ€™s free program" color="text-primary bg-secondary" />
                </div> -->
            </div>
        </div>
    </div>

    <main class="w-full max-w-[1300px] h-full flex flex-col items-center bg-[#e4e8ec]">

        <h2 class="text-primary text-2xl md:text-5xl mt-12 mb-12 font-bold">You missed this</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4">
            <img src="../img/2025/wrap/1.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/2.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/3.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/4.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/5.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/6.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/7.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/8.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
            <img src="../img/2025/wrap/9.jpg" class="w-full aspect-video object-cover mt-1 mb-1" alt="">
        </div>

        <h2 class="text-primary text-2xl md:text-5xl mt-12 mb-12 font-bold">Made possible with</h2>
        <Sponsors />
    </main>
</Layout>
