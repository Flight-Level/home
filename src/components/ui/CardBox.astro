---
const { title, minHeight } = Astro.props;
---

<div class={`flex flex-col col-span-6 xl:col-span-4 bg-white p-8`} >
    <h2 class="bg-white text-[24px] font-bold text-primary w-full flex items-center rounded-t-sm ">
        {title}
    </h2>
    <div class={`text-sm bg-white rounded-b-sm mt-4`} style={`min-height: ${minHeight}px`}>
        <slot />
    </div>
</div>