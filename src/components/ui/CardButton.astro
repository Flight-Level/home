---
const { href, external, secondary } = Astro.props;
const classes = secondary
    ? "border border-primary p-3 text-center text-primary hover:bg-primary hover:text-white d-block inline-block mt-2 text-sm rounded-sm"
    : "bg-primary p-3 text-center text-white hover:bg-[#61778b] d-block inline-block mt-2 text-base rounded-sm";
---
<a
    href={href}
    target={external ? "_blank" : undefined}
    class={classes}
>
    <slot />
</a>
